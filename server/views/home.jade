extends layout

block content
	.span3.bs-docs-sidebar
		ul.nav.nav-list.bs-docs-sidenav
			each cat in categories
				li.category-nav
					a(href="#cat-" + cat.slug)
						i.icon-chevron-right
						| !{cat.name}
				
				each forum in cat.forums
					li.forum-nav
						a(href="#forum-" + forum.slug)
							i.icon-chevron-right
							| !{forum.name}
	.span9.home-categories
		for cat in categories
			.home-category
				.row(id = 'cat-' + cat.slug).category-head
					a(href= '/category/'+ cat.slug+'/').home-category-title #{cat.name}
				.row.home-category-headings
					.span9
						.span1 Status
						.span4 Forum
						.span1 Topics
				section.home-category-forums
					each forum in cat.forums
						if forum.parent == null
							.row.home-category-forum(id = 'forum-' + forum.slug)
								.span9
									.span1 
										if forum.isRead
											i.icon-folder-open
										else
											i.icon-folder-close
									.span4
										a(href = '/forum/'+forum.slug+'/') #{forum.name}
									.span1.home-category-num-topics= forum.topics.length
	
block append scripts
	script(src='/js/views/home.js')
	script(src='/js/controllers/homeController.js')